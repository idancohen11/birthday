# OpenAI API Key
OPENAI_API_KEY=sk-your-api-key-here

# WhatsApp Group ID (you'll get this from logs when bot first connects)
TARGET_GROUP_ID=

# Dry run mode - set to true to prevent actual message sending
DRY_RUN=true

# Response delay range in milliseconds (30 seconds to 3 minutes)
RESPONSE_DELAY_MIN=30000
RESPONSE_DELAY_MAX=180000

# Log level (debug, info, warn, error)
LOG_LEVEL=info

